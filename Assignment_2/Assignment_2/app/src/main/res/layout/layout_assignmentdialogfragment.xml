<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_above="@+id/edit_courseCode"
        android:layout_marginBottom="60dp"
        android:text="ASSIGNMENTS"
        android:textColor="@android:color/black"
        />

    <EditText
        android:hint="Assignment Title"
        android:id="@+id/edit_assignmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edit_assignmentGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment Grade"
        android:inputType="number"
        android:maxLength="3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_assignmentTitle"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/SaveButton_Assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/edit_assignmentGrade"
        android:text="Save" />

    <Button
        android:id="@+id/CancelButton_Assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_assignmentGrade"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:text="Cancel"
        />



</RelativeLayout>